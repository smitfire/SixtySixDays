<hr>
<div class="container">
  <%= form_for :task, class: 'form-horizontal center', url: new_task_path do |f| %>
   <div class="form-group">
     <%= f.label :title, class: ' control-label col-sm-2'%>
     <div class="col-sm-10">
       <%= f.text_field :title, class: 'form-control', :placeholder => "Name" %>
     </div>
   </div>
   <div class="clearfix"></div>
   <hr> 
    <div class="form-group">
      <%= f.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control', :placeholder => "task description" %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit "Signup", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <%end %>
</div>